// VGA Monitor E100 Driver - Test Program
//		[ Sets first row of vga to certain colors ]


// Set screen to black
			cp		vga_color_write		test_0
			cp		vga_y				test_0
					
test_bl_y		cp		vga_x				test_0
test_bl_x		call		vga_draw_pixel			vga_return
			add		vga_x				vga_x			test_1
			blt		test_bl_x				vga_x			test_x_dim
			add		vga_y				vga_y			test_1
			blt		test_bl_y				vga_y			test_y_dim


// Draw image to screen
			cp		vga_y	test_0									// initialize y
					
test_loop_y	cp		vga_x	test_0									// initialize x
//test_loop_x	cpfa		vga_color_write		test_colors		test_index	// copy color from array
test_loop_x	cpfa		vga_color_write		test_colors		vga_x		// copy color from array
					call		vga_draw_pixel	vga_return					// i/o
			add		vga_x				vga_x			test_1		// incrememnt x
			add		test_index			test_index		test_1		// increment array loc
			blt		test_loop_x			vga_x			test_x_dim	// x - for loop
			add		vga_y				vga_y			test_1		// increment y
			blt		test_loop_y			vga_y			test_y_dim	// y - for loop
					
// Draw rectangles
			cp		vga_x1				test_x1
			cp		vga_y1				test_y1
			cp		vga_x2				test_x2
			cp		vga_y2				test_y2
			cp		vga_color_write		test_color
			call		vga_draw_rect			vga_return


			halt

// Variables
test_x_dim	.data	640
test_y_dim	.data	480
test_index	.data	0

test_0		.data	0
test_1		.data	1

test_y		.data	0
test_x		.data	0

test_x1		.data	10
test_y1		.data	10
test_x2		.data	50
test_y2		.data	400
test_color	.data	255

// Array of pixel colors
test_colors	.data 252
